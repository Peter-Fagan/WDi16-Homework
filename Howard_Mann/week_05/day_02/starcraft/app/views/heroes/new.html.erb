<h1>Add a new hero</h1>

<%= form_for(@hero, url: '/heroes') do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, autofocus: true %>
  </p>
  <p>
    <%= f.label :background %><br>
    <%= f.text_area :background, cols: 40, rows: 15,  required: true %>
  </p>
  <p>
    <%= f.label :image %><br>
    <%= f.url_field :image, required: true %>
  </p>
  <p>
    <%= f.collection_select(:race_id, Race.all, :id, :name) %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>
